<Page x:Class="TrafficPolice.MainInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrafficPolice"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainInfo" Background="Gray">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Вызовы" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
            <Grid Grid.Row="1">
                <ListBox Background="Transparent" BorderBrush="Transparent">
                    <TextBlock Text="ул.Станкозаводская 22" FontFamily="20"/>
                    <TextBlock Text="ул.Ленина 11" FontFamily="20"/>
                    <TextBlock Text="ул.Горького 11" FontFamily="20"/>
                    <TextBlock Text="ул.Горького 11" FontFamily="20"/>
                    <TextBlock Text="ул.Вокзальная 10" FontFamily="20"/>
                    <TextBlock Text="ул.Маяковского 21" FontFamily="20"/>
                    <TextBlock Text="ул.Есенина 6" FontFamily="20"/>
