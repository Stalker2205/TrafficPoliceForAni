                    <TextBlock Text="ул.Каширина 8" FontFamily="20"/>
                    <TextBlock Text="ул.Павлова 27" FontFamily="20"/>
                    <TextBlock Text="ул.Краснорядская 19" FontFamily="20"/>
                </ListBox>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Аварийность на дорогах" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
            <StackPanel Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ДТП:" Grid.Column="0" FontSize="20"/>
                    <TextBlock Text="211" Grid.Column="1" FontSize="20"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Погибло:" Grid.Column="0" FontSize="20"/>
                    <TextBlock Text="22" Grid.Column="1" FontSize="20"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Ранены:" Grid.Column="0" FontSize="20"/>
                    <TextBlock Text="249" Grid.Column="1" FontSize="20"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Машины:" Grid.Column="0" FontSize="20"/>
                    <TextBlock Text="540" Grid.Column="1" FontSize="20"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Иные ТС:" Grid.Column="0" FontSize="20"/>
                    <TextBlock Text="50" Grid.Column="1" FontSize="20"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Вызовы:" Grid.Column="0" FontSize="20"/>
                    <TextBlock Text="70" Grid.Column="1" FontSize="20"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Активны:" Grid.Column="0" FontSize="20"/>
                    <TextBlock Text="15" Grid.Column="1" FontSize="20"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="На посту:" Grid.Column="0" FontSize="20"/>
                    <TextBlock Text="70" Grid.Column="1" FontSize="20"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Патруль:" Grid.Column="0" FontSize="20"/>
                    <TextBlock Text="90" Grid.Column="1" FontSize="20"/>
                </Grid>
                
            </StackPanel>
        </Grid>
    </Grid>
</Page>
