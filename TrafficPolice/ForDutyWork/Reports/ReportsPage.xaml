<Page x:Class="TrafficPolice.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrafficPolice"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportsPage" Background="Gray">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.08*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Background="Gray" HorizontalAlignment="Center">
            <MenuItem Header="О Дтп"/>
            <MenuItem Header="О званиях сотрудников" x:Name="bt_FromStaffRanks" Click="bt_FromStaffRanks_Click"/>
            <MenuItem Header="Об уволенных" x:Name="bt_Yvolennie" Click="bt_Yvolennie_Click"/>
        </Menu>
        <Frame x:Name="FrameFromReports" Visibility="Hidden" Grid.Row="1"/>
    </Grid>
</Page>
