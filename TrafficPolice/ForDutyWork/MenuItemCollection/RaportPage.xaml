<Page x:Class="TrafficPolice.RaportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrafficPolice"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RaportPage" Background="Gray">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.08*"/>
        </Grid.RowDefinitions>
        <RichTextBox IsEnabled="True" Background="LightGray" Width="400" Margin="0,0,0,5" x:Name="rtb_raportText"/>
        <Button Grid.Row="1" Content="Отправить" HorizontalAlignment="Center" FontSize="20" Margin="0,0,0,2" x:Name="bt_CreateRaports" Click="bt_CreateRaports_Click"/>
    </Grid>
</Page>
